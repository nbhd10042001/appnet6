@using App.Services
@inject SidebarAdminService _sidebarAdminService

@{
    ViewData["Title"] = "Delete Database";
}

<h1>@ViewData["Title"]</h1>
<p class="alert alert-danger">Are you sure to delete database?</p>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>

    <hr>
    <a asp-controller="DbManage" asp-action="Index">Back</a>
</form>

@{
    _sidebarAdminService.SetActive("DbManage", "Index", "Database");
}

@section Sidebar
{
    @Html.Raw(_sidebarAdminService.RenderHtml())
}